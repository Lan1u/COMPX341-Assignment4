import time

import redis
from flask import Flask

app = Flask(__name__)
cache = redis.Redis(host='redis', port=6379)

def stored_primes():
	return str(cache.lrange('primes',0,-1))+"\n"

def detect_num(n):
 

	if num > 1: 
      
  
   	for i in range(2, num//2): 
         
       
    	   if (num % i) == 0: 
        	   return False
         	  break
   else: 
       cache.lpush('primes',n)
        return True
  
else: 
   return False

@app.route('/isPrime/<int:number>')
def detect(number):
    status=detect_num(number)
    if status:
        return '{} is prime\n'.format(number)
    else:
        return '{} is not prime\n'.format(number)

@app.route('/primeStored')

def display():
	return stored_primes()
